<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewPedidoNombre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/textViewPedidoEstado"
        android:text="Pedido Nombre" />

    <TextView
        android:id="@+id/textViewPedidoEstado"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/buttonPedidoAccion"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Pedido Estado" />

    <Button
        android:id="@+id/buttonPedidoAccion"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="Button"
        android:textSize="8sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
</RelativeLayout>