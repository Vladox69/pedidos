<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layoutProducto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewProductoNombre"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/textViewProductoCantidad"
        android:text="Producto" />

    <TextView
        android:id="@+id/textViewProductoCantidad"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/textViewProductoPrecio"
        android:text="Cantidad" />

    <TextView
        android:id="@+id/textViewProductoPrecio"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Precio" />
</RelativeLayout>